<div class="name-infometion">
  <h2>プロフィール登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <!--登録時に画像が表示される-->
    <% if current_name.image.file == nil %>
      <img src="/assets/default_icon.png" class="default_image">
    <% else %>
      <img src="<%= current_name.image %>" class="user-image" style="width: 20%;">
    <% end %>
  
    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :username %>
    </div>
  
    <div>
      <%= f.label :プロフィール画像 %><br />
      <%= f.file_field :image %>
    </div>
  
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :変更したいパスワード %> <i>(変更したくない場合は空白のままにします)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :変更したいパスワード（もう一回入力）%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :変更する前のパスワード（現在のパスワード） %> <i>（変更を確認するには、現在のパスワードが必要です）</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "更新" %>
    </div>
  <% end %>

  <p><%= button_to "アカウントを削除します", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "ユーザー一覧ページに戻ります", :back %>
</div>