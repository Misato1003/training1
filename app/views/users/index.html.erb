<div class="old-homes">
  <img src="https://www.islandbrain.co.jp/start-business/wp-content/uploads/2021/06/dayservice.jpg" alt="老人ホーム">
</div>

<p id="notice"><%= notice %></p>

<div class="user-show">
  <h1 class="index">ユーザ一覧表示</h1>

  <table class="user-name">
    <thead>
      <tr>
        <th><%= sort_link(@q, :name, "名前") %></th>
        <th><%= sort_link(@q, :age, "年齢") %></th>
        <th><%= sort_link(@q, :height,"身長") %></th>
        <th><%= sort_link(@q, :weight, "体重") %></th>
        <th><%= sort_link(@q, :gender, "性別") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.age %></td>
          <td><%= user.height %></td>
          <td><%= user.weight %></td>
          <td><%= user.gender %></td>
          <td><%= link_to '詳細ページ', user %></td>
          <td><%= link_to '編集', edit_user_path(user) %></td>
          <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="menyu-">
  <p><%= link_to 'ユーザー検索', home_page_path %></p>
  <p><%= link_to '新規作成', new_user_path %></p>
  <p><%= link_to 'ログイン', new_name_session_path %></p>
  <p><%= link_to '新規登録', new_name_registration_path %></p>
  <p><%= link_to 'ログアウト', destroy_name_session_path, method: :delete %></p>
  <p><%= link_to 'ログインの設定（プロフィール設定）', 'names/edit' %></p>
</div>
