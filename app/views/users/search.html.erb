<h1>検索結果</h1>

<table>
    <thead>
        <tr>
            <th><%= sort_link(@q, :name, "名前") %></th>
            <th><%= sort_link(@q, :age, "年齢") %></th>
            <th><%= sort_link(@q, :height, "身長") %></th>
            <th><%= sort_link(@q, :weight, "体重") %></th>
            <th><%= sort_link(@q, :gender, "性別") %></th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
    <tbody>
        <% @results.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.age %></td>
                <td><%= user.height %></td>
                <td><%= user.weight %></td>
                <td><%= user.gender %></td>
                <td><%= link_to '一覧表示' , user %></td>
                <td><%= link_to '編集' , edit_user_path(user) %></td>
                <td><%= link_to '削除' , user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

